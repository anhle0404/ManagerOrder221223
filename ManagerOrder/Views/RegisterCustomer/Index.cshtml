            </div>*@
        </div>
    </div>
</div>

<div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-light p-2">
                <h4 class="modal-title" id="modalCenterTitle">Thêm mới khách hàng</h4>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body p-2">
                <form action="/" method="post" id="frm_RegisterCustomer">
                    <input type="hidden" id="RegisterCustomer_Id" class="form-control" value="0" disabled />
                    <div class="row g-2">
                        <div class="col-md-12 col-lg-4">
                            <div class="form-floating form-floating-outline my-1">
                                <input type="text"
                                       id="RegisterCustomer_CustomerCode"
                                       class="form-control"
                                       placeholder="" />
                                <label for="RegisterCustomer_CustomerCode">Mã khách hàng<span class="text-danger">(*)</span></label>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-8">
                            <div class="form-floating form-floating-outline my-1">
                                <input type="text"
                                       id="RegisterCustomer_CustomerName"
                                       class="form-control"
                                       placeholder="" />
                                <label for="RegisterCustomer_CustomerName">Tên khách hàng<span class="text-danger">(*)</span></label>
                            </div>
                        </div>
                    </div>
                    <div class="row g-2">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-floating form-floating-outline my-1">
                                <input type="text"
                                       id="RegisterCustomer_CustomerInitials"
                                       class="form-control"
                                       placeholder="" />
                                <label for="RegisterCustomer_CustomerInitials">Tên viết tắt</label>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-floating form-floating-outline my-1">
                                <input type="tel"
                                       id="RegisterCustomer_CustomerPhone"
                                       class="form-control"
                                       placeholder="" />
                                <label for="RegisterCustomer_CustomerPhone">Số điện thoại<span class="text-danger">(*)</span></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-12">
                        <div class="form-floating form-floating-outline my-1">
                            <input type="text"
                                   id="RegisterCustomer_CustomerAddress"
                                   class="form-control"
                                   placeholder="" />
                            <label for="RegisterCustomer_CustomerAddress">Địa chỉ<span class="text-danger">(*)</span></label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer bg-light p-1">
                <button type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" class="btn btn-success btn-sm" onclick="return SaveDataProduct();">Lưu</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/register_customer.js" asp-append-version="true"></script>