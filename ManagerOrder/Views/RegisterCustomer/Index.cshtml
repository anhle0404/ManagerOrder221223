
@{
    ViewData["Title"] = "Index";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="javascript:void(0);">Trang chủ</a>
        </li>
        <li class="breadcrumb-item active">Khách hàng</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header border-bottom p-2 sticky-top bg-white d-flex flex-wrap align-items-center">
        <form action="javascript:GetAllCustomer();" method="get" class="card-header-form">
            <div class="input-group input-group-merge">
                <div class="form-floating form-floating-outline">
                    <input type="text" class="form-control" id="keyword" placeholder="" oninput="return GetAllCustomer();">
                    <label for="keyword">Từ khóa</label>
                </div>
                <button class="btn btn-primary"><i class="mdi mdi-magnify"></i></button>
            </div>
        </form>

        <div class="card-header-action">
            <button class="btn btn-primary btn-sm" onclick="return onAddCustomer();">
                <span class="mdi mdi-plus">Thêm mới khách hàng</span>
            </button>
        </div>
    </div>
    <div class="card-body p-2">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr class="align-middle text-center sticky-top-table">
                        <th class="sticky-left-table">Mã khách hàng</th>
                        <th class="text-nowrap">Tên khách hàng</th>
                        <th class="text-nowrap">Tên viết tắt</th>
                        <th class="text-nowrap">Sđt</th>
                        <th class="text-nowrap">Địa chỉ</th>
                        <th class="sticky-right-table"></th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                </tbody>
            </table>
        </div>


        <div class="list-card" style="display:none;">
